<Window
    x:Class="NavigationDrawerPopUpMenu2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:db="clr-namespace:NavigationDrawerPopUpMenu2"
    xmlns:local="clr-namespace:NavigationDrawerPopUpMenu2"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    Background="{x:Null}"
    Foreground="White"
    Icon="/repair_logo.jpg"
    Visibility="Visible"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="ThreeDBorderWindow"
    mc:Ignorable="d">
    <Window.Resources>
        <Storyboard x:Key="OpenMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="0" Value="70" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="200" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Repair_logo" Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="0" Value="70" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="130" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CloseMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="0" Value="200" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="70" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Repair_logo" Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="0" Value="130" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="70" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Uslugi_up_1">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="Ingineer" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame KeyTime="0" Value="20,20,20,20" />
                <SplineThicknessKeyFrame KeyTime="0:0:0.2" Value="5,5,5,5" />
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Uslugi_down_1">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="Ingineer" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame KeyTime="0" Value="5,5,5,5" />
                <SplineThicknessKeyFrame KeyTime="0:0:0.2" Value="20,20,20,20" />
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Uslugi_up_2">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="Remont" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame KeyTime="0" Value="20,20,20,20" />
                <SplineThicknessKeyFrame KeyTime="0:0:0.2" Value="5,5,5,5" />
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Uslugi_down_2">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="Remont" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame KeyTime="0" Value="5,5,5,5" />
                <SplineThicknessKeyFrame KeyTime="0:0:0.2" Value="20,20,20,20" />
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Uslugi_up_3">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="Design" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame KeyTime="0" Value="20,20,20,20" />
                <SplineThicknessKeyFrame KeyTime="0:0:0.2" Value="5,5,5,5" />
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Uslugi_down_3">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="Design" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame KeyTime="0" Value="5,5,5,5" />
                <SplineThicknessKeyFrame KeyTime="0:0:0.2" Value="20,20,20,20" />
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="MouseEnter_img_uslugi">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="AddServicePhotoBtn" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame KeyTime="0" Value="0" />
                <SplineThicknessKeyFrame KeyTime="0:0:0.3" Value="50" />
            </ThicknessAnimationUsingKeyFrames>
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="DeleteServicePhotoBtn" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame KeyTime="0" Value="0" />
                <SplineThicknessKeyFrame KeyTime="0:0:0.3" Value="50" />
            </ThicknessAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="AddServicePhotoBtn" Storyboard.TargetProperty="(FrameworkElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="0" Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="DeleteServicePhotoBtn" Storyboard.TargetProperty="(FrameworkElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="0" Value="1" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="4" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MouseLeave_img_uslugi">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="AddServicePhotoBtn" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame KeyTime="0" Value="50" />
                <SplineThicknessKeyFrame KeyTime="0:0:0.3" Value="0" />
            </ThicknessAnimationUsingKeyFrames>
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="DeleteServicePhotoBtn" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame KeyTime="0" Value="50" />
                <SplineThicknessKeyFrame KeyTime="0:0:0.3" Value="0" />
            </ThicknessAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="AddServicePhotoBtn" Storyboard.TargetProperty="(FrameworkElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="0" Value="1" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="DeleteServicePhotoBtn" Storyboard.TargetProperty="(FrameworkElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="0" Value="1" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>


        <Storyboard x:Key="OpenDescription">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="Description_uslugi" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame KeyTime="0" Value="20,20,500,20" />
                <SplineThicknessKeyFrame KeyTime="0:0:0.3" Value="20" />
            </ThicknessAnimationUsingKeyFrames>
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="Feedback_uslugi" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame KeyTime="0" Value="20" />
                <SplineThicknessKeyFrame KeyTime="0:0:0.3" Value="500,20,20,20" />
            </ThicknessAnimationUsingKeyFrames>

            <DoubleAnimation
                Storyboard.TargetName="Feedback_uslugi"
                Storyboard.TargetProperty="(Line.Opacity)"
                From="1.0"
                To="0.0"
                Duration="0:0:0.1" />
            <DoubleAnimation
                Storyboard.TargetName="Description_uslugi"
                Storyboard.TargetProperty="(Line.Opacity)"
                From="0.0"
                To="1.0"
                Duration="0:0:0.1" />
        </Storyboard>
        <Storyboard x:Key="OpenFeedback">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="Feedback_uslugi" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame KeyTime="0" Value="500,20,20,20" />
                <SplineThicknessKeyFrame KeyTime="0:0:0.3" Value="20" />
            </ThicknessAnimationUsingKeyFrames>
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="Description_uslugi" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame KeyTime="0" Value="20" />
                <SplineThicknessKeyFrame KeyTime="0:0:0.3" Value="20,20,500,20" />
            </ThicknessAnimationUsingKeyFrames>

            <DoubleAnimation
                Storyboard.TargetName="Feedback_uslugi"
                Storyboard.TargetProperty="(Line.Opacity)"
                From="0.0"
                To="1.0"
                Duration="0:0:0.1" />
            <DoubleAnimation
                Storyboard.TargetName="Description_uslugi"
                Storyboard.TargetProperty="(Line.Opacity)"
                From="1.0"
                To="0.0"
                Duration="0:0:0.1 " />
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpenMenu">
            <BeginStoryboard Storyboard="{StaticResource OpenMenu}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonCloseMenu">
            <BeginStoryboard Storyboard="{StaticResource CloseMenu}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="MouseEnter" SourceName="Ingineer">
            <BeginStoryboard Storyboard="{StaticResource Uslugi_up_1}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="MouseLeave" SourceName="Ingineer">
            <BeginStoryboard Storyboard="{StaticResource Uslugi_down_1}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="MouseEnter" SourceName="Remont">
            <BeginStoryboard Storyboard="{StaticResource Uslugi_up_2}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="MouseLeave" SourceName="Remont">
            <BeginStoryboard Storyboard="{StaticResource Uslugi_down_2}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="MouseEnter" SourceName="Design">
            <BeginStoryboard Storyboard="{StaticResource Uslugi_up_3}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="MouseLeave" SourceName="Design">
            <BeginStoryboard Storyboard="{StaticResource Uslugi_down_3}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="MouseEnter" SourceName="img_uslugi_change">
            <BeginStoryboard Storyboard="{StaticResource MouseEnter_img_uslugi}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="MouseLeave" SourceName="img_uslugi_change">
            <BeginStoryboard Storyboard="{StaticResource MouseLeave_img_uslugi}" />
        </EventTrigger>

        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="Description_uslugi_btn">
            <BeginStoryboard Storyboard="{StaticResource OpenDescription}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="Feedback_uslugi_btn">
            <BeginStoryboard Storyboard="{StaticResource OpenFeedback}" />
        </EventTrigger>
    </Window.Triggers>
    <Grid Background="#FFDEDEDE">
        <Grid
            x:Name="GridMain"
            Margin="70,60,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Visibility="Visible">

            <!--  ПРОФИЛЬ  -->
            <Grid
                x:Name="Profile"
                Background="White"
                Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Border
                    Margin="40"
                    Background="#FF23547F"
                    BorderBrush="#FF23547F"
                    CornerRadius="20">
                    <Grid>
                        <Grid
                            x:Name="Account_input"
                            Margin="60,0,60,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Visibility="Hidden">
                            <StackPanel>
                                <DockPanel Height="50">
                                    <materialDesign:PackIcon
                                        x:Name="mail_account_icon_1"
                                        Width="Auto"
                                        Height="Auto"
                                        Margin="15,10,10,10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Kind="Phone" />
                                    <TextBox
                                        x:Name="Account_phone_input"
                                        Margin="5,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Номер телефона"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                </DockPanel>
                                <DockPanel Height="50">
                                    <materialDesign:PackIcon
                                        x:Name="key_account_icon_1"
                                        Width="Auto"
                                        Height="Auto"
                                        Margin="15,10,10,10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Kind="Key" />
                                    <PasswordBox
                                        x:Name="Account_password_input"
                                        Margin="5,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Пароль"
                                        Foreground="White"
                                        Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
                                </DockPanel>
                                <Button
                                    x:Name="Input_user_account"
                                    Margin="45,25"
                                    Padding="15,0"
                                    HorizontalContentAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    Background="#FF071A44"
                                    BorderBrush="{x:Null}"
                                    Click="Input_user_account_Click"
                                    Foreground="White"
                                    Style="{StaticResource MaterialDesignOutlinedButton}">
                                    <TextBlock Text="Войти" />
                                </Button>
                                <Button
                                    x:Name="Registrate_new_User"
                                    Margin="15,0"
                                    Padding="15,0"
                                    HorizontalAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    Background="{x:Null}"
                                    BorderBrush="{x:Null}"
                                    Click="Registrate_new_User_Click"
                                    Style="{StaticResource MaterialDesignOutlinedButton}">
                                    <TextBlock Text="Зарегистрироваться" TextDecorations="Underline" />
                                </Button>
                            </StackPanel>
                        </Grid>
                        <Grid
                            x:Name="Account_registrate"
                            Margin="60,0,60,0"
                            VerticalAlignment="Center"
                            Visibility="Visible">
                            <StackPanel>
                                <DockPanel Height="50">
                                    <materialDesign:PackIcon
                                        x:Name="account_account_icon_2"
                                        Width="Auto"
                                        Height="Auto"
                                        Margin="15,10,10,10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Kind="Account" />
                                    <TextBox
                                        x:Name="Account_surname_registrate"
                                        Margin="5,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Фамилия"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                </DockPanel>
                                <DockPanel Height="50">
                                    <TextBox
                                        x:Name="Account_name_registrate"
                                        Margin="60,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Имя"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                </DockPanel>
                                <DockPanel Height="50">
                                    <TextBox
                                        x:Name="Account_lastname_registrate"
                                        Margin="60,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Отчество"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                </DockPanel>

                                <DockPanel Height="50">
                                    <materialDesign:PackIcon
                                        x:Name="adress_account_icon"
                                        Width="Auto"
                                        Height="Auto"
                                        Margin="15,10,10,10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Kind="MapMarker" />
                                    <TextBox
                                        x:Name="Account_adress_registrate"
                                        Margin="5,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Адрес проживания"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                </DockPanel>

                                <DockPanel Height="50">
                                    <materialDesign:PackIcon
                                        x:Name="mail_account_icon_3"
                                        Width="Auto"
                                        Height="Auto"
                                        Margin="15,10,10,10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Kind="Phone" />
                                    <TextBox
                                        x:Name="Account_phone_num_registrate"
                                        Margin="5,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Номер телефона"
                                        MaxLength="11"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                </DockPanel>
                                <DockPanel Height="50">
                                    <materialDesign:PackIcon
                                        x:Name="key_account_icon_3"
                                        Width="Auto"
                                        Height="Auto"
                                        Margin="15,10,10,10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Kind="Key" />
                                    <PasswordBox
                                        x:Name="Account_password_registrate"
                                        Margin="5,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Пароль"
                                        Foreground="White"
                                        Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
                                </DockPanel>

                                <DockPanel Height="50">
                                    <materialDesign:PackIcon
                                        Width="Auto"
                                        Height="Auto"
                                        Margin="15,10,10,10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Kind="Key" />
                                    <PasswordBox
                                        x:Name="Account_double_password_registrate"
                                        Margin="5,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Повторите пароль"
                                        Foreground="White"
                                        Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
                                </DockPanel>

                                <Button
                                    x:Name="Registrate_accaunt_button"
                                    Margin="45,10"
                                    Padding="15,0"
                                    HorizontalContentAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    Background="#FF071A44"
                                    BorderBrush="{x:Null}"
                                    Click="Registrate_accaunt_button_Click"
                                    Foreground="White"
                                    Style="{StaticResource MaterialDesignOutlinedButton}">
                                    <TextBlock Text="Зарегистрироваться" />
                                </Button>
                                <Button
                                    x:Name="Clear_account_registrate"
                                    Margin="15,0"
                                    Padding="15,0"
                                    HorizontalAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    Background="{x:Null}"
                                    BorderBrush="{x:Null}"
                                    Click="Clear_account_registrate_Click"
                                    Style="{StaticResource MaterialDesignOutlinedButton}">
                                    <TextBlock Text="Очистить" TextDecorations="Underline" />
                                </Button>
                                <Button
                                    x:Name="question_about_account"
                                    Margin="15,0,15,10"
                                    Padding="15,0"
                                    HorizontalAlignment="Center"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    Background="{x:Null}"
                                    BorderBrush="{x:Null}"
                                    Click="question_about_account_Click"
                                    Style="{StaticResource MaterialDesignOutlinedButton}">
                                    <TextBlock Text="У меня уже есть аккаунт" TextDecorations="Underline" />
                                </Button>
                            </StackPanel>
                        </Grid>
                        <Grid
                            x:Name="Account_information"
                            Margin="60,0,60,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Visibility="Collapsed">
                            <StackPanel>
                                <DockPanel Height="50" HorizontalAlignment="Center">
                                    <TextBlock
                                        x:Name="ID_zagalovok"
                                        Margin="0,0,16,0"
                                        Padding="0"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="ID" />
                                    <TextBlock
                                        x:Name="Account_Id"
                                        Padding="0"
                                        VerticalAlignment="Center"
                                        DataContext="{Binding Path=Users}"
                                        FontSize="14"
                                        Text="{Binding Path=Id}" />
                                </DockPanel>
                                <DockPanel Height="50">
                                    <materialDesign:PackIcon
                                        x:Name="account_account_icon_1"
                                        Width="Auto"
                                        Height="Auto"
                                        Margin="15,10,10,10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Kind="Account" />
                                    <TextBox
                                        x:Name="Account_surname_information"
                                        Margin="5,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Фамилия"
                                        DataContext="{Binding Path=Users}"
                                        IsReadOnly="False"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding Path=Surname}" />
                                </DockPanel>
                                <DockPanel Height="50">
                                    <TextBox
                                        x:Name="Account_name_information"
                                        Margin="60,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Имя"
                                        DataContext="{Binding Path=Users}"
                                        IsReadOnly="False"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding Path=Name}" />
                                </DockPanel>
                                <DockPanel Height="50">
                                    <TextBox
                                        x:Name="Account_lastname_information"
                                        Margin="60,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Отчество"
                                        DataContext="{Binding Path=Users}"
                                        IsReadOnly="False"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding Path=Lastname}" />
                                </DockPanel>

                                <DockPanel Height="50">
                                    <materialDesign:PackIcon
                                        x:Name="adress_account_icon_1"
                                        Width="Auto"
                                        Height="Auto"
                                        Margin="15,10,10,10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Kind="MapMarker" />
                                    <TextBox
                                        x:Name="Account_adress_information"
                                        Margin="5,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Адрес проживания"
                                        DataContext="{Binding Path=Users}"
                                        IsReadOnly="False"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding Path=Adres}" />
                                </DockPanel>
                                <DockPanel Height="50">
                                    <materialDesign:PackIcon
                                        x:Name="phone_account_icon_2"
                                        Width="Auto"
                                        Height="Auto"
                                        Margin="15,10,10,10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Kind="Phone" />
                                    <TextBox
                                        x:Name="Account_email_information"
                                        Margin="5,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Номер телефона"
                                        DataContext="{Binding Path=Users}"
                                        IsReadOnly="False"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding Path=PhoneNumber}" />
                                </DockPanel>
                                <DockPanel Height="50">
                                    <materialDesign:PackIcon
                                        x:Name="key_account_icon_2"
                                        Width="Auto"
                                        Height="Auto"
                                        Margin="15,10,10,10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Kind="Key" />
                                    <PasswordBox
                                        x:Name="Account_password_information"
                                        Margin="5,5,30,5"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="Пароль"
                                        Foreground="White"
                                        IsEnabled="True"
                                        Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
                                </DockPanel>

                                <Button
                                    x:Name="Redact_account"
                                    Margin="50,20,50,20"
                                    Padding="15,0"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    Background="#FFDA9E1C"
                                    BorderBrush="{x:Null}"
                                    Click="Redact_account_Click"
                                    Cursor="Hand"
                                    Style="{StaticResource MaterialDesignRaisedButton}">
                                    <!--  ContentSave  -->
                                    <materialDesign:PackIcon
                                        x:Name="Redact_account_PackIcon"
                                        Width="28"
                                        Height="Auto"
                                        Margin="0,5"
                                        Padding="0,10"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Kind="Pencil" />
                                </Button>
                                <Button
                                    x:Name="Delete_accaunt"
