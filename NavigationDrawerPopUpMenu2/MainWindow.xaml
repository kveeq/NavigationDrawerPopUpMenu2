                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemTemplate>

                        <DataTemplate>
                            <Grid Width="350" Height="250">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Image
                                    Grid.RowSpan="2"
                                    Grid.Column="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Source="{Binding Photo}"
                                    Stretch="UniformToFill" />
                                <StackPanel Grid.RowSpan="2" Grid.Column="1">
                                    <TextBox
                                        Margin="10,0"
                                        materialDesign:HintAssist.Hint="Фамилия"
                                        BorderBrush="Transparent"
                                        FontSize="14"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding Surname}" />
                                    <TextBox
                                        Margin="10,0"
                                        materialDesign:HintAssist.Hint="Имя"
                                        BorderBrush="Transparent"
                                        FontSize="14"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding Name}" />
                                    <TextBox
                                        Margin="10,0"
                                        materialDesign:HintAssist.Hint="Отчество"
                                        BorderBrush="Transparent"
                                        FontSize="14"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding Lastname}" />
                                    <TextBox
                                        Margin="10,0"
                                        materialDesign:HintAssist.Hint="Номер телефона"
                                        BorderBrush="Transparent"
                                        FontSize="12"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding PhoneNumber}" />
                                    <TextBox
                                        Margin="10,0"
                                        materialDesign:HintAssist.Hint="Адрес проживания"
                                        BorderBrush="Transparent"
                                        FontSize="12"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding Adres}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                                <Grid Grid.Column="1">
                                    <ComboBox
                                        x:Name="cmbBoxBrigadirRoles"
                                        Margin="10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        materialDesign:HintAssist.Hint="Роль"
                                        BorderBrush="Transparent"
                                        IsEnabled="False"
                                        SelectedIndex="0">
                                        <ComboBoxItem Content="Бригадир" />
                                        <ComboBoxItem Content="Клиент" />
                                    </ComboBox>
                                    <DockPanel
                                        Grid.Column="1"
                                        Margin="10,0,10,10"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Background="Orange">

                                        <TextBlock
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Bottom"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="Заказы: " />
                                        <TextBlock
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Bottom"
                                            materialDesign:HintAssist.Hint="Колисчество заказов"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="{Binding OrderCount}" />
                                    </DockPanel>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!--  Администратор Клиенты  -->
            <Grid x:Name="Admin_Clients" Visibility="Collapsed">
                <Grid.Background>
                    <ImageBrush ImageSource="/1.jpg" Stretch="UniformToFill" />
                </Grid.Background>
                <Grid>
                    <Grid.Background>
                        <SolidColorBrush Opacity="0.6" Color="Black" />
                    </Grid.Background>
                </Grid>
                <Button
                    Width="50"
                    Height="50"
                    Margin="50"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Panel.ZIndex="1"
                    Background="#FFE2D116"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="Сохранить изменения"
                    Visibility="Hidden">
                    <materialDesign:PackIcon Foreground="Black" Kind="CloudSync" />
                </Button>
                <ListView
                    x:Name="ClientsLstView"
                    Margin="20,20,10,20"
                    HorizontalAlignment="Stretch"
                    Style="{DynamicResource MaterialDesignCardsListBox}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemTemplate>

                        <DataTemplate>
                            <Grid
                                Width="350"
                                Height="250"
                                Background="Orange">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Image
                                    Grid.RowSpan="2"
                                    Grid.Column="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Source="/anketa.jpg"
                                    Stretch="UniformToFill" />
                                <StackPanel Grid.RowSpan="2" Grid.Column="1">
                                    <TextBox
                                        Margin="10,0"
                                        materialDesign:HintAssist.Hint="Фамилия"
                                        BorderBrush="Transparent"
                                        FontSize="14"
                                        Foreground="White"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding Surname}" />
                                    <TextBox
                                        Margin="10,0"
                                        materialDesign:HintAssist.Hint="Имя"
                                        BorderBrush="Transparent"
                                        FontSize="14"
                                        Foreground="White"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding Name}" />
                                    <TextBox
                                        Margin="10,0"
                                        materialDesign:HintAssist.Hint="Отчество"
                                        BorderBrush="Transparent"
                                        FontSize="14"
                                        Foreground="White"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding Last_name}" />
                                    <TextBox
                                        Margin="10,0"
                                        materialDesign:HintAssist.Hint="Номер телефона"
                                        BorderBrush="Transparent"
                                        FontSize="12"
                                        Foreground="White"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding Phone_number}" />
                                    <TextBox
                                        Margin="10,0"
                                        materialDesign:HintAssist.Hint="Адрес проживания"
                                        BorderBrush="Transparent"
                                        FontSize="12"
                                        Foreground="White"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                        Text="{Binding Adress}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                                <Grid Grid.Column="1">
                                    <ComboBox
                                        Margin="10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        materialDesign:HintAssist.Hint="Роль"
                                        BorderBrush="Transparent"
                                        FontWeight="Bold"
                                        IsEnabled="False"
                                        SelectedIndex="1">
                                        <ComboBoxItem Content="Бригадир" />
                                        <ComboBoxItem Content="Клиент" />
                                    </ComboBox>
                                    <DockPanel
                                        Grid.Column="1"
                                        Margin="10,0,10,10"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Background="White">

                                        <TextBlock
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Bottom"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Text="Заказы: " />
                                        <TextBlock
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Bottom"
                                            materialDesign:HintAssist.Hint="Колисчество заказов"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Text="{Binding Orders_count}" />
                                    </DockPanel>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
        <!--  основная страница  -->
        <Grid
            Height="60"
            VerticalAlignment="Top"
            Background="#FF5C99D6"
            Visibility="Visible">
            <Grid.Effect>
                <DropShadowEffect
                    BlurRadius="1"
                    ShadowDepth="1"
                    Color="#FFACACAC" />
            </Grid.Effect>
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="22"
                Text="Капитальный ремонт" />
        </Grid>
        <!--  верхний бар  -->
        <Grid
            x:Name="GridMenu"
            Width="70"
            HorizontalAlignment="Left"
            Background="#FF31577E">
            <Grid.Effect>
                <DropShadowEffect
                    BlurRadius="2"
                    ShadowDepth="1"
                    Color="#FFAEAEAE" />
            </Grid.Effect>
            <StackPanel>
                <Grid
                    Height="135"
                    Background="White"
                    RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform />
                            <TranslateTransform />
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Button
                        x:Name="ButtonOpenMenu"
                        Width="60"
                        Height="60"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Click="ButtonOpenMenu_Click"
                        Foreground="#FF31577E"
                        Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}">
                        <materialDesign:PackIcon
                            Width="25"
                            Height="25"
                            Kind="Menu" />
                    </Button>
                    <Button
                        x:Name="ButtonCloseMenu"
                        Width="60"
                        Height="60"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Click="ButtonCloseMenu_Click"
                        Foreground="#FF31577E"
                        Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                        Visibility="Collapsed">
                        <materialDesign:PackIcon
                            Width="25"
                            Height="25"
                            Kind="ArrowLeft" />
                    </Button>

                    <Image
                        x:Name="Repair_logo"
                        Width="70"
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Source="/repair_logo.jpg" />
                </Grid>
                <ListView
                    x:Name="ListViewMenu"
                    Foreground="#FF5C99D6"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    SelectionChanged="ListViewMenu_SelectionChanged"
                    Visibility="Hidden">
                    <ListViewItem
                        x:Name="Home"
                        Height="60"
                        Visibility="Visible">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="Home" />
                            <TextBlock
                                Margin="20,10"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Главная" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem
                        x:Name="ItemHome"
                        Height="60"
                        Visibility="Visible">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="Account" />
                            <TextBlock
                                Margin="20,10"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Личный кабинет" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem
                        x:Name="ItemCreate"
                        Height="60"
                        Visibility="Visible">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="CartVariant" />
                            <TextBlock
                                Margin="20,10"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Корзина" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem
                        x:Name="zayavki"
                        Height="60"
                        Visibility="Visible">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="FileDocumentMultiple" />
                            <TextBlock
                                Margin="20,10"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Мои заявки" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem
                        x:Name="Brigadirs"
                        Height="60"
                        Visibility="Visible">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="AccountHardHat" />
                            <TextBlock
                                Margin="20,10"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Бригадиры" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem
                        x:Name="clients"
                        Height="60"
                        Visibility="Visible">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="AccountGroup" />
                            <TextBlock
                                Margin="20,10"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Клиенты" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem
                        x:Name="zayvkiForBrigadir"
                        Height="60"
                        Visibility="Visible">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Margin="10"
                                Foreground="White"
                                Kind="HammerScrewdriver" />
                            <TextBlock
                                Margin="20,10"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Работа" />
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>
        <!--  левый бар  -->
    </Grid>
</Window>
