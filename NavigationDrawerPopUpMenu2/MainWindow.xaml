                                    </DockPanel>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="0,10,0,0"
                                        DataContext="{Binding Users}"
                                        FontSize="20"
                                        Foreground="Black"
                                        Text="{Binding Adres}" />

                                </StackPanel>
                                <!--  CommandParameter="{Binding}"  -->

                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!--  Администратор Бригадиры  -->
            <Grid x:Name="Admin_Brigadirs" Visibility="Collapsed">
                <Grid.Background>
                    <ImageBrush ImageSource="/1.jpg" Stretch="UniformToFill" />
                </Grid.Background>
                <Grid>
                    <Grid.Background>
                        <SolidColorBrush Opacity="0.6" Color="Black" />
                    </Grid.Background>
                </Grid>
                <Button
                    x:Name="ServicechangeCommitBtn"
                    Width="50"
                    Height="50"
                    Margin="50"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Panel.ZIndex="1"
                    Background="#FFE2D116"
                    Click="ServicechangeCommitBtn_Click"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
